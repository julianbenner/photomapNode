extends layout

block content    

  div.row
    div.login-form
      div.panel.panel-default
        div.panel-heading Login
        div.panel-body
          form(action='login',method='post')
            div.form-group
              label(for='inputUser') Username
              input#inputUser.form-control(type='text', name='username', placeholder='Username')
            div.form-group
              label(for='inputUser') Password
              input#inputUser.form-control(type='password', name='password', placeholder='Password')
            input.btn.btn-primary(type='submit', value='Login')

            p #{message}